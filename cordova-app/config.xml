<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="2000040" id="com.jtronlabs.birdu" ios-CFBundleVersion="2.3.1" version="2.3.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Birdu</name>
    <description>
        It's a bird-eat-bird world out there, do what you must to survive.
    </description>
    <author email="jtronlabs@gmail.com" href="http://jtronlabs.github.io">
        James Lowrey (JTronLabs)
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="https://*.google.com/*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
        <preference name="android-manifest/application/activity/@android:theme" value="@android:style/Theme.Black.NoTitleBar" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="AndroidLaunchMode" value="singleInstance" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeepRunning" value="true" />
    <icon src="icon.png" />
    <engine name="ios" spec="~4.2.1" />
    <engine name="android" spec="~6.1.2" />
    <plugin name="cordova-custom-config" spec="~3.0.14" />
    <config-file parent="/*" target="AndroidManifest.xml">
        <uses-permission android:name="com.android.vending.BILLING" />
    </config-file>
    <preference name="android-manifest/uses-permission/[@android:name='android.permission.ACCESS_NETWORK_STATE']" delete="true" />
    <preference name="android-manifest/uses-permission/[@android:name='android.permission.ACCESS_WIFI_STATE']" delete="true" />
    <preference name="android-manifest/uses-permission/[@android:name='android.permission.READ_EXTERNAL_STORAGE']" delete="true" />
    <preference name="android-manifest/uses-permission/[@android:name='android.permission.WRITE_EXTERNAL_STORAGE']" delete="true" />

    <plugin name="cordova-plugin-vibration" spec="~2.1.4" />
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.1.6" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
    <plugin name="cordova-plugin-console" spec="~1.0.6" />
    <plugin name="cc.fovea.cordova.purchase" spec="~6.0.0">
        <variable name="BILLING_KEY" value="" />
    </plugin>
</widget>
